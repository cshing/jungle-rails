<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <h3>Product Details</h3>
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
          
          <h3>Reviews</h3>
          <% @reviews.each do |r| %>

            <dt>User</dt>
            <% @users = User.where(id: r.user_id) %>
            <% @users.each do |u| %>
            <dd><%= u.first_name %> <%= u.last_name %></dd>
            <% end %>

            <dt>Rating</dt>
            <dd><%= r.rating %></dd>
            <dt>Review</dt>
            <dd><%= r.description %></dd>
          <% end %>
        </dl>
      </div>
    </div>

  </article>

</section>
